<div class="d-flex flex-column gap-2 dh-crit-art-config">
    {{#if configId}}
    <input type="hidden" name="_configId" value="{{configId}}">
    {{/if}}
    
    <p class="notes"><i class="fas fa-info-circle"></i> Configure artwork displayed behind the text for criticals.</p>

    <div class="form-group">
        <label>Image</label>
        <div class="form-fields">
            <file-picker style="flex: 1;" type="imagevideo" name="imagePath" value="{{config.imagePath}}" placeholder="path/to/art.webp"></file-picker>
        </div>
    </div>

    <div class="form-group">
        <label>Offset X (px)</label>
        <div class="form-fields">
            <input type="range" class="range-slider" name="offsetX" value="{{config.offsetX}}" min="-600" max="600" step="10">
            <span class="range-value">{{config.offsetX}}</span>
        </div>
    </div>

    <div class="form-group">
        <label>Offset Y (px)</label>
        <div class="form-fields">
            <input type="range" class="range-slider" name="offsetY" value="{{config.offsetY}}" min="-300" max="300" step="10">
            <span class="range-value">{{config.offsetY}}</span>
        </div>
    </div>

    <div class="form-group">
        <label>Size</label>
        <div class="form-fields">
            <select name="artSize">
                {{#each sizes as |label key|}}
                <option value="{{key}}" {{#if (eq ../config.artSize key)}}selected{{/if}}>{{label}}</option>
                {{/each}}
            </select>
        </div>
    </div>

    <div class="form-footer">
        <button type="button" class="crit-preview-btn">
            <i class="fas fa-play"></i> Preview
        </button>
        <button type="submit">
            <i class="fas fa-save"></i> Save Changes
        </button>
    </div>
</div>